<div class="content-mid">
   <% if(papers){
	papers.forEach(function(paper,index){%>
	   	<div class="section">
			<div class="row">
				<h2>
					<%if(paper.type){%>
					<i class='iconfont icon-chuang'></i>
					<%}else{%>
					<i class='iconfont icon-zhuan'></i>
					<%}%>
					<a href="/paper?author=<%= paper.author %>&title=<%= paper.title %>"><%= paper.title %></a>
				</h2>
			</div>
			
			<div class="row_1">
				<p><%- paper.content %></p>
			</div>
			<ul>
				<li>作者：<a href='/user?name=<%= paper.author %>'><%= paper.author %></a></li>
				<li>日期：<%= paper.time %></li>
				<li>阅读：<%= paper.pv %></li>
				<li>评论：<%= paper.comments.length %></li>
				<li>转载：<%= paper.reprint_to.length %></li>
			</ul>
		</div>
   	<%})}%>
	<div class="devide">
		<ul>
			<%if(!isFirst){%>
			      <li><a href="/?page=<%= (pagenow-1) %>">上一页</a></li>
			<%}%>
			<%for(var i=0;i<total;i++){%>
				<li><a href="/?page=<%= (i+1) %>"><%= (i+1) %></a></li>
			<%}%>
			<%if(!isLast){%>
			      <li><a href="/?page=<%= (pagenow+1) %>">下一页</a></li>
			<%}%>
		</ul>
		<span>共<%= total %>页，第<%= pagenow %>页</span>
	</div>
</div>